<%-include("../partials/header")-%>
<%- include("../modals/modal-signin.ejs"); -%>
<%- include("../modals/modal-signup.ejs"); -%>

<link rel="stylesheet" href="/css/signin.css">

<div class="container py-5 my-5">
  <h2 class="mb-lg-5 mb-4 px-5 pb-1" style="font-weight:normal">Reset your Password 🗝</h2>
  <% if((!(errors === undefined || errors.length == 0))){%>
  <div class="alert pb-0 alert-danger">
    <%errors.forEach(function(message){%>
    <p><%=message.msg%></p>
  </div>
  <%});%>
  <%}%>
    <div class="row px-3 px-lg-0">
      <div class="col col-12 my-4 px-4 pt-4 pb-5 px-lg-5 points3">
    <form class="form-signin" action="/reset" method="post">
  <img class="mb-4" src="/docs/4.3/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">

  <label for="username" >Email address:</label>
  <input type="email" id="username" name="username" class="form-control mt-1" required autofocus>
  <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">
  <button class="btn btn-md orange btn-blockk mt-3 py-2" type="submit">Send Reset Password Link</button>

  </form>
</div>
</div>
</div>

<hr class="m-0">
<%- include("../partials/footer.ejs"); -%>
